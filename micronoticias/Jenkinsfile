pipeline {
    agent any

    tools {
        maven 'mvn'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Check..'
                checkout scm
            }
        }

        stage('Pull Configurations') {
            steps {
                echo 'Config..'

             }
        }

        stage('Build') {
            steps {
                echo 'Building..'
                git branch: 'master', url: 'https://github.com/juniorsmartins/site.git'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'mvn test -Punit-tests'
            }
        }

        stage('Deploy') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS'
              }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }
}

